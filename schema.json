{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"description": "This schema defines the information related to test application/environment entries for OWASP's Vulnerable Web Applicaitons Directory (VWAD) project",
	"examples": [
		[
			{
				"url": "https://example.com",
				"name": "Example Test App",
				"collection": [
					"online",
					"container"
				],
				"technology": [
					"TypeScript",
					"JavaScript",
					"Node.js"
				],
				"references": [
					{
						"name": "download",
						"url": "https://gitplace.com/example/test-app"
					},
					{
						"name": "docker",
						"url": "https://hub.docker.com/r/example/test-app/"
					},
					{
						"name": "guide",
						"url": "https://guide.example.com/"
					},
					{
						"name": "live",
						"url": "https://test-app.herokuapp.com"
					}
				],
				"author": "Example Author",
				"badge": "example/test-app"
			}
		]
	],
	"type": "array",
	"items": {
		"$ref": "#/$defs/VWADEntry"
	},
	"title": "OWASP VWAD Schema",
	"$defs": {
		"VWADEntry": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"url": {
					"type": "string",
					"format": "uri"
				},
				"name": {
					"type": "string"
				},
				"collection": {
					"type": "array",
					"items": {
						"enum": [
							"container",
							"mobile",
							"online",
							"offline"
						]
					}
				},
				"technology": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"references": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/Reference"
					}
				},
				"author": {
					"type": "string"
				},
				"notes": {
					"type": "string"
				},
				"badge": {
					"type": "string"
				}
			},
			"required": [
				"collection",
				"name",
				"url"
			],
			"title": "VWADEntry"
		},
		"Reference": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"name": {
					"$ref": "#/$defs/Name"
				},
				"url": {
					"type": "string",
					"format": "uri"
				}
			},
			"required": [
				"name",
				"url"
			],
			"title": "Reference"
		},
		"Name": {
			"enum": [
				"guide",
				"download",
				"docker",
				"downloads",
				"announcement",
				"live",
				"demo",
				"preview"
			],
			"title": "Name"
		}
	}
}
